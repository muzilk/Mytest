pipeline {
    agent any

    environment {
        AA = "test"
    }
    stages { 
        

        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
    }

    post {
        always {
            echo 'I will always say Hello again!'
        }
    }
}
